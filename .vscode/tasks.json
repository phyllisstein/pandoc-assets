{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "command": "yarn",
            "args": [
                "webpack",
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "label": "Build CSS",
            "options": {
                "cwd": "${workspaceFolder}/assets",
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            },
            "type": "shell",
        },
    ],
}
